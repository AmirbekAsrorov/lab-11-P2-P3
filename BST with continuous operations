#include <iostream>
using namespace std;

class Node {
public:
    char key;
    Node* left;
    Node* right;
    Node(char k) : key(k), left(nullptr), right(nullptr) {}
};

Node* insert(Node* root, char key) {
    if (root == nullptr) return new Node(key);
    if (key < root->key)
        root->left = insert(root->left, key);
    else if (key > root->key)
        root->right = insert(root->right, key);
    return root;
}

Node* findMin(Node* node) {
    while (node->left != nullptr)
        node = node->left;
    return node;
}

Node* deleteNode(Node* root, char key) {
    if (root == nullptr) return root;
    if (key < root->key)
        root->left = deleteNode(root->left, key);
    else if (key > root->key)
        root->right = deleteNode(root->right, key);
    else {
        if (root->left == nullptr) {
            Node* temp = root->right;
            delete root;
            return temp;
        }
        else if (root->right == nullptr) {
            Node* temp = root->left;
            delete root;
            return temp;
        }
        Node* temp = findMin(root->right);
        root->key = temp->key;
        root->right = deleteNode(root->right, temp->key);
    }
    return root;
}

void inorder(Node* root) {
    if (root == nullptr) return;
    inorder(root->left);
    cout << root->key << " ";
    inorder(root->right);
}

int main() {
    Node* root = nullptr;
    int n;
    cout << "Enter number of nodes to create the initial tree: ";
    cin >> n;

    for (int i = 0; i < n; i++) {
        char val;
        cout << "Enter character " << i + 1 << ": ";
        cin >> val;
        root = insert(root, val);
    }

    cout << "\nInitial tree (inorder traversal): ";
    inorder(root);
    cout << endl;

    char choice;
    do {
        cout << "\nChoose an operation:\n";
        cout << "i - Insert a node\n";
        cout << "d - Delete a node\n";
        cout << "p - Print tree (inorder)\n";
        cout << "e - Exit\n";
        cout << "Enter choice: ";
        cin >> choice;

        if (choice == 'i' || choice == 'I') {
            char val;
            cout << "Enter character to insert: ";
            cin >> val;
            root = insert(root, val);
            cout << "Tree after insertion (inorder): ";
            inorder(root);
            cout << endl;
        }
        else if (choice == 'd' || choice == 'D') {
            char val;
            cout << "Enter character to delete: ";
            cin >> val;
            root = deleteNode(root, val);
            cout << "Tree after deletion (inorder): ";
            inorder(root);
            cout << endl;
        }
        else if (choice == 'p' || choice == 'P') {
            cout << "Current tree (inorder): ";
            inorder(root);
            cout << endl;
        }
        else if (choice == 'e' || choice == 'E') {
            cout << "Exiting program. Goodbye!\n";
        }
        else {
            cout << "Invalid choice, please try again.\n";
        }
    } while (choice != 'e' && choice != 'E');

    return 0;
}
